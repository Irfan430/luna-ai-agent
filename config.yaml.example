# LUNA AI Agent Configuration Example
# Author: IRFAN
# Copy this file to config.yaml and fill in your API keys

# LLM Configuration
llm:
  mode: single  # single | multi
  default_provider: deepseek
  
  providers:
    deepseek:
      api_key: "your-deepseek-api-key-here"
      model: "deepseek-chat"
      base_url: "https://api.deepseek.com"
    
    openrouter:
      api_key: "your-openrouter-api-key-here"
      model: "anthropic/claude-3.5-sonnet"
      base_url: "https://openrouter.ai/api/v1"
    
    openai:
      api_key: "your-openai-api-key-here"
      model: "gpt-4"
      base_url: "https://api.openai.com/v1"
    
    local:
      api_key: ""
      model: "llama3"
      base_url: "http://localhost:11434"

  # Token continuation settings
  continuation:
    max_retries: 3
    detect_incomplete: true

# Safety Configuration
safety:
  max_planning_iterations: 5
  max_continuation_retries: 3
  
  risk_levels:
    low: auto_execute
    medium: optional_confirmation
    high: require_confirmation
    dangerous: block

# Agent Configuration
agent:
  name: LUNA
  personality: calm_confident
  verbosity: minimal

# GUI Configuration
gui:
  theme: dark
  show_token_usage: true
  show_confidence: true
  show_risk_indicator: true

# Voice Configuration
voice:
  enabled: false
  language: en
